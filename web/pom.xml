    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>se.streamsource.streamflow</groupId>
        <artifactId>streamflow</artifactId>
        <version>1.1-SNAPSHOT</version>
    </parent>
    <artifactId>streamflow-web</artifactId>
    <groupId>se.streamsource.streamflow</groupId>
    <version>1.1-SNAPSHOT</version>
    <packaging>bundle</packaging>
    <name>StreamFlow web</name>
    <description>StreamFlow web application</description>
    <properties>
        <deploy.dir>${glassfish.domain}/streamflow</deploy.dir>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Export-Package>se.streamsource.streamflow.web.*</Export-Package>
                        <Import-Package>
                            net.sf.cglib.proxy;org.apache.lucene.index;org.apache.solr.spelling;org.apache.solr.update;org.apache.solr.highlight;org.apache.solr.handler;org.apache.solr.handler.admin;org.apache.solr.handler.component;org.apache.solr.request;org.apache.solr.schema;org.apache.solr.analysis;org.apache.solr.search;org.apache.solr.search.function;com.mysql.jdbc;*;version=0.0
                        </Import-Package>
                        <Bundle-SymbolicName>${pom.artifactId}</Bundle-SymbolicName>
                        <Bundle-Activator>se.streamsource.streamflow.web.activator.StreamFlowActivator
                        </Bundle-Activator>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
            </plugin>
            
        </plugins>
    </build>

