<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
    <preConditions>
        <dbms type="mysql"/>
        <sqlCheck expectedResult="1">select 1</sqlCheck>
        <runningAs username="streamflow"/>
    </preConditions>

    <changeSet id="1" author="rickardoberg">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="streamflow" tableName="completed"/>
            </not>
            <not>
                <tableExists schemaName="streamflow" tableName="labels"/>
            </not>
        </preConditions>
        <comment>
            Initial tables
        </comment>
        <createTable tableName="completed">
            <column name="id" type="varchar(60)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="task_id" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="note" type="clob">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="completed_on" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="duration" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="assigned" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="tasktype" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="project" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="assigned_group" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="organization" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createTable tableName="labels">
            <column name="id" type="varchar(60)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="label" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="arvidhuss">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="completed" columnName="tasktype"/>
            </not>
        </preConditions>
        <comment>Add column tasktype</comment>
        <sql>alter table completed add column tasktype VARCHAR(256) CHARACTER SET utf8 after assigned</sql>
    </changeSet>
</databaseChangeLog>
