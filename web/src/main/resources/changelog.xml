<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
    <preConditions>
        <dbms type="mysql"/>
        <sqlCheck expectedResult="1">select 1</sqlCheck>
        <runningAs username="streamflow"/>
    </preConditions>

    <changeSet id="1" author="rickardoberg">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="streamflow" tableName="completed"/>
            </not>
            <not>
                <tableExists schemaName="streamflow" tableName="labels"/>
            </not>
        </preConditions>
        <comment>
            Initial tables
        </comment>
        <createTable tableName="completed">
            <column name="id" type="varchar(60)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="task_id" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="note" type="clob">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="completed_on" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="duration" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="assigned" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="tasktype" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="project" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="assigned_group" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="organization" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createTable tableName="labels">
            <column name="id" type="varchar(60)">
                <constraints nullable="false"/>
            </column>
            <column name="label" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="arvidhuss">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="completed" columnName="tasktype"/>
            </not>
        </preConditions>
        <comment>Add column tasktype</comment>
        <sql>alter table completed add column tasktype VARCHAR(256) CHARACTER SET utf8 after assigned</sql>
    </changeSet>
    <changeSet id="3" author="rickardoberg">
        <renameTable oldTableName="completed" newTableName="cases"/>
        <renameColumn tableName="cases"
            oldColumnName="task_id" newColumnName="case_id" columnDataType="varchar(15)"/>
        <renameColumn tableName="cases"
            oldColumnName="completed_on" newColumnName="closed_on" columnDataType="datetime"/>
        <renameColumn tableName="cases"
            oldColumnName="tasktype" newColumnName="casetype" columnDataType="varchar(256)"/>
    </changeSet>
    <changeSet id="4" author="rickardoberg">
        <addColumn tableName="cases">
            <column name="resolution" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="5" author="rickardoberg">
        <addColumn tableName="cases">
            <column name="casetype_owner" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <!-- New statistics database -->
    <changeSet id="6" author="rickardoberg">
        <preConditions onFail="MARK_RAN">
            <tableExists schemaName="streamflow" tableName="cases"/>
            <tableExists schemaName="streamflow" tableName="labels"/>
        </preConditions>
        <dropTable tableName="cases"/>
        <dropTable tableName="labels"/>
    </changeSet>

    <changeSet id="7" author="rickardoberg">
        <createTable tableName="cases">
            <column name="id" type="varchar(60)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="case_id" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="note" type="clob">
                <constraints nullable="false"/>
            </column>
            <column name="resolution" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="created_on" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="closed_on" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="duration" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="assigned" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="casetype" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="casetype_owner" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="assigned_project" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="assigned_organization" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="assigned_group" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createTable tableName="descriptions">
            <column name="id" type="varchar(60)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="description" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="labels">
            <column name="id" type="varchar(60)">
                <constraints nullable="false"/>
            </column>
            <column name="label" type="varchar(60)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="fields">
            <column name="id" type="varchar(60)">
                <constraints nullable="false"/>
            </column>
            <column name="form" type="varchar(60)">
                <constraints nullable="false"/>
            </column>
            <column name="field" type="varchar(60)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createView viewName="casesdescriptions">
            select
            cases.case_id,
            cases.description,
            cases.created_on,
            cases.closed_on,
            cases.duration,
            (select descriptions.description from descriptions where descriptions.id = cases.resolution) as resolution,
            (select descriptions.description from descriptions where descriptions.id = cases.assigned) as assigned,
            (select descriptions.description from descriptions where descriptions.id = cases.casetype) as casetype,
            (select descriptions.description from descriptions where descriptions.id = cases.casetype_owner) as casetype_owner,
            (select descriptions.description from descriptions where descriptions.id = cases.assigned_project) as assigned_project,
            (select descriptions.description from descriptions where descriptions.id = cases.assigned_organization) as assigned_organization,
            (select descriptions.description from descriptions where descriptions.id = cases.assigned_group) as assigned_group
            from cases
        </createView>
    </changeSet>
</databaseChangeLog>
