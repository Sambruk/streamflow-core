<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>se.streamsource.streamflow</groupId>
    <artifactId>streamflow</artifactId>
    <version>1.25-SNAPSHOT</version>
  </parent>
  <artifactId>streamflow-webclient</artifactId>
  <groupId>se.streamsource.streamflow</groupId>
  <packaging>war</packaging>
  <name>Streamflow WebClient</name>
  <description>Streamflow WebClient</description>
  <properties>
    <streamflow.version>1.23-SNAPSHOT</streamflow.version>
    <spring.version>3.2.5.RELEASE</spring.version>
    <spring.security.version>3.2.4.RELEASE</spring.security.version>
    <buildscript>build.sh</buildscript>
  </properties>

  <profiles>
    <profile>
      <id>Windows</id>
      <activation>
        <os>
          <family>Windows</family>
        </os>
      </activation>
      <properties>
        <buildscript>build.bat</buildscript>
      </properties>
    </profile>
  </profiles>
  
  <build>
    <plugins>
      <!-- Build JavaScript app -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.2.1</version>
        <executions>
          <execution>
            <phase>process-resources</phase>
            <goals>
              <goal>exec</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <executable>${basedir}/${buildscript}</executable>
          <workingDirectory>${basedir}/</workingDirectory>
        </configuration>
      </plugin>

      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>2.4.1</version>
        <executions>
          <execution>
            <id>copy-root-resources</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/${project.build.finalName}</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/build</directory>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>wagon-maven-plugin</artifactId>
        <configuration>
          <fromFile>target/${project.build.finalName}.war</fromFile>
          <toFile>${project.build.finalName}.war</toFile>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.mortbay.jetty</groupId>
        <artifactId>jetty-maven-plugin</artifactId>
        <version>8.1.9.v20130131</version>
        <configuration>
          <webApp>
            <contextPath>/webclient</contextPath>
            <baseResource implementation="org.eclipse.jetty.util.resource.ResourceCollection">
              <resourcesAsCSV>src/main/webapp,target/classes,dist</resourcesAsCSV>
            </baseResource>
          </webApp>
          <connectors>
            <connector implementation="org.eclipse.jetty.server.nio.SelectChannelConnector">
              <port>8088</port>
              <maxIdleTime>3600000</maxIdleTime>
            </connector>
            <connector implementation="org.eclipse.jetty.server.ssl.SslSocketConnector">
              <port>8445</port>
              <maxIdleTime>3600000</maxIdleTime>
              <keystore>${project.basedir}/src/etc/keystore</keystore>
              <password>eiddemo</password>
              <keyPassword>eiddemo</keyPassword>
              <truststore>${project.basedir}/src/etc/keystore</truststore>
              <trustPassword>eiddemo</trustPassword>
            </connector>
          </connectors>
          <stopKey>stopit</stopKey>
          <stopPort>9998</stopPort>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>

    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <version>2.5</version>
    </dependency>

    <!-- Spring / Security -->
