                            <executions>
                                <execution>
                                    <id>deploy-streamflow</id>
                                    <phase>install</phase>
                                    <goals>
                                        <goal>run</goal>
                                    </goals>
                                    <configuration>
                                        <tasks>
                                            <echo message="Deploying ${basedir}/target/${project.artifactId}-${project.version}.jar to ${deploy.dir}}"></echo>
                                            <copy todir="${deploy.dir}"
                                                  preservelastmodified="true">
                                                <fileset
                                                        file="${basedir}/target/${project.artifactId}-${project.version}.*"/>
                                            </copy>
                                        </tasks>
                                    </configuration>
