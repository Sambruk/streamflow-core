<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>se.streamsource.streamflow</groupId>
        <artifactId>dist</artifactId>
        <version>1.29-beta4-SNAPSHOT</version>
    </parent>
    <artifactId>ear</artifactId>
    <groupId>se.streamsource.streamflow.dist</groupId>
    <version>1.29-beta4-SNAPSHOT</version>
    <packaging>ear</packaging>
    <name>Streamflow Ear</name>
    <description>Streamflow Ear Distribution</description>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-ear-plugin</artifactId>
                <configuration>
                    <displayName>Streamflow EAR</displayName>
                    <finalName>streamflow-${project.version}</finalName>
                    <modules>
                        <webModule>
                            <groupId>se.streamsource.streamflow</groupId>
                            <artifactId>streamflow-web</artifactId>
                            <contextRoot>/streamflow</contextRoot>
                        </webModule>
                        <webModule>
                            <groupId>se.streamsource.streamflow</groupId>
                            <artifactId>streamflow-war</artifactId>
                            <contextRoot>/client</contextRoot>
                        </webModule>
                        <webModule>
                            <groupId>se.streamsource.streamflow</groupId>
                            <artifactId>streamflow-statistic</artifactId>
                            <contextRoot>/statistic</contextRoot>
                        </webModule>
                    </modules>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>wagon-maven-plugin</artifactId>
                <configuration>
                    <fromFile>target/streamflow-${project.version}.ear</fromFile>
                    <toFile>streamflow-${project.version}.ear</toFile>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>properties-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>read-project-properties</goal>
                        </goals>
                        <configuration>
                            <files>
                                <file>${basedir}/glassfish.properties</file>
                            </files>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.glassfish.maven.plugin</groupId>
                <artifactId>maven-glassfish-plugin</artifactId>
                <configuration>
                    <user>admin</user>
                    <passwordFile>${basedir}/glassfish.properties</passwordFile>
                    <glassfishDirectory>${glassfish.directory}</glassfishDirectory>
                    <domainDirectory>${glassfish.directory}/glassfish/domains/</domainDirectory>
                    <domain>
                        <name>${glassfish.domain.name}</name>
                        <adminPort>${glassfish.domain.port.admin}</adminPort>
                        <httpPort>${glassfish.domain.port.http}</httpPort>
                        <httpsPort>${glassfish.domain.port.https}</httpsPort>
                    </domain>
                    <components>
                        <component>
                            <name>streamflow</name>
                            <artifact>${basedir}/target/streamflow-${project.version}.ear</artifact>
                        </component>
                    </components>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>web-client</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-ear-plugin</artifactId>
                        <configuration>
                            <modules>
                                <webModule>
                                    <groupId>se.streamsource.streamflow</groupId>
                                    <artifactId>streamflow-web</artifactId>
                                    <contextRoot>/streamflow</contextRoot>
                                </webModule>
                                <webModule>
                                    <groupId>se.streamsource.streamflow</groupId>
                                    <artifactId>streamflow-war</artifactId>
                                    <contextRoot>/client</contextRoot>
                                </webModule>
                                <webModule>
                                    <groupId>se.streamsource.streamflow</groupId>
                                    <artifactId>streamflow-statistic</artifactId>
                                    <contextRoot>/statistic</contextRoot>
                                </webModule>
                                <webModule>
                                    <groupId>se.streamsource.streamflow</groupId>
                                    <artifactId>streamflow-webclient</artifactId>
                                    <contextRoot>/webclient</contextRoot>
                                </webModule>
                            </modules>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>wagon-maven-plugin</artifactId>
                        <configuration>
                            <fromFile>target/streamflow-${project.version}.ear</fromFile>
                            <toFile>streamflow-${project.version}.ear</toFile>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
